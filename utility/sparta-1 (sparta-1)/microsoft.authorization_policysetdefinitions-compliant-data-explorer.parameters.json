          "metadata": {
            "category": "Azure Data Explorer",
            "version": "1.0.0"
          },
          "parameters": {
            "adeCmk": {
              "defaultValue": "Deny",
              "type": "string"
            },
            "adeDiagnostics": {
              "defaultValue": "DeployIfNotExists",
              "type": "string"
            },
            "adeDoubleEncryption": {
              "defaultValue": "Deny",
              "type": "string"
            },
            "adeEncryption": {
              "defaultValue": "Deny",
              "type": "string"
            },
            "adeLogAnalyticsWorkspaceId": {
              "type": "string"
            },
            "adeModifyPublicNetworkAccess": {
              "defaultValue": "Modify",
              "type": "string"
            },
            "adePublicNetworkAccess": {
              "defaultValue": "Deny",
              "type": "string"
            },
            "adeSku": {
              "defaultValue": "Deny",
              "type": "string"
            }
          },
          "policyDefinitionGroups": [
            {
              "category": "Data Protection",
              "description": "Policy to ensure Data Explorer is using secure encryption",
              "displayName": "Ensure Data Explorer is using secure encryption",
              "name": "Encryption"
            },
            {
              "category": "Network Security",
