{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "input": {
      "value": {
        "ResourceId": "/providers/Microsoft.Management/managementGroups/sparta-1/providers/Microsoft.Authorization/policyDefinitions/Deny-ApiApp-Https",
        "kind": "policydefinitions",
        "location": "global",
        "name": "Deny-ApiApp-Https",
        "properties": {
          "description": "Use of HTTPS ensures server/service authentication and protects data in transit from network layer eavesdropping attacks.",
          "displayName": "API App should only be accessible over HTTPS",
          "metadata": {
            "category": "App Service",
            "createdBy": "f8bd5cba-e903-422f-8196-8a5f7f73b6cd",
            "version": "1.0.0"
          },
          "mode": "Indexed",
          "parameters": {
            "effect": {
              "allowedValues": [
                "Audit",
                "Disabled",
                "Deny"
              ],
              "defaultValue": "Deny",
              "metadata": {
                "description": "Enable or disable the execution of the policy",
                "displayName": "Effect"
              },
              "type": "String"
            }
          },
          "policyRule": {
            "if": {
              "allOf": [
                {
                  "equals": "Microsoft.Web/sites",
                  "field": "type"
                },
                {
                  "field": "kind",
                  "like": "*api"
                },
                {
                  "equals": "false",
                  "field": "Microsoft.Web/sites/httpsOnly"
                }
              ]
            },
            "then": {
              "effect": "[parameters('effect')]"
            }
          },
          "policyType": "Custom"
        },
        "tenantId": "5663f39e-feb1-4303-a1f9-cf20b702de61",
        "type": "Microsoft.Authorization/policyDefinitions"
      }
    }
  }
}
